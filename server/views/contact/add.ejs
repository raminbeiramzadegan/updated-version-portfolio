<%-include ('../partials/header.ejs');%>
<%-include ('../partials/main_nav.ejs');%>


<!--content for the Add page-->
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">
            <h1 class="text-center mb-3">
                <%= title %>
            </h1>
        
        <form class = "form-control" method="POST">
                <div class ="form-group">
                    <label for="nameTextField">Name:</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contact Title"
                    name="cname" required>
                </div>
                  <br>
                <div class ="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the contact's email"
                    name="email" required>
                </div>

                <br>
                <div class ="form-group">
                    <label for="numberTextField">Number</label>
                    <input type="number" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the contact's number"
                    name="cnumber" required>
                </div>
                <br>
                <br>
                <button class = "btn btn-primary" type="submit"><i class = "fas fa-edit"></i>submit</button>
                <a href="/contactList" class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a> 
            
        </form>
     
    </div>
</div>
</div>
</div>

<%- include('../partials/bottom_nav'); -%>
<%- include('../partials/footer'); -%>

